@page
@model CS4790GroupProject.Pages.Admin.Semesters.UpsertModel
@{
}
<div class="container">
    <h2>@(Model.Semester.SemesterID == 0 ? "Create" : "Update") Semester</h2>
    <form method="post" asp-action="Upsert">
        <input type="hidden" asp-for="Semester.SemesterID" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Semester.SemesterName"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="Semester.SemesterName" />
                <span class="text-danger" asp-validation-for="Semester.SemesterName"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Semester.StartDate"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="Semester.StartDate" />
                <span class="text-danger" asp-validation-for="Semester.StartDate"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Semester.EndDate"></label>
            </div>
            <div class="col-9">
                <input class="form-control" asp-for="Semester.EndDate" />
                <span class="text-danger" asp-validation-for="Semester.EndDate"></span>
            </div>
        </div>
        <div class="row">
            <button type="submit">Save</button>
        </div>
    </form>
</div>
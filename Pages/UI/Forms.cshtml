        <div class="col-12 color-1">
            Guardian Information:
        </div>
    </div>
    <form method="post" class="border">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-sm-12">
                <fieldset>
                    <legend class="color-1">Contact Info</legend>
                    <label for="firstName" class="">First Name</label>
                    <input type="text" id="firstName" />
                    <label for="lastName" class="">Last Name</label>
                    <input type="text" id="lastName" />
                    <div class="row">
                        <div class="col-6">
                            <label for="email">Email</label>
                            <input type="email" />
                        </div>
                        <div class="col-6">
                            <label for="phone">Phone #</label>
                            <input type="tel" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-sm-12">
                <fieldset>
                    <legend class="color-1">Address</legend>
                    <label>Address line 1</label>
                    <input type="text" />
                    <label>Address line 2</label>
                    <input type="text" />
                    <div class="row">
                        <div class="col-4">
                            <label>City</label>
                            <input type="text" />
                        </div>
                        <div class="col-4">
                            <label>State</label>
                            <input type="text" />
                        </div>
                        <div class="col-4">
                            <label>Zip</label>
                            <input type="text" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="row ">
            <div class="col-lg-6 offset-lg-3 col-sm-12">
                <fieldset>
                    <legend class="color-1">Employment/Education</legend>
                    <label>Occupation</label>
                    <input type="text" />
                    <label>Employer</label>
                    <input type="text" />
                    <div class="row">
                        <div class="col-6">
                            <label>Weekly Hours Worked</label>
                            <input type="text" />
                        </div>
                        <div class="col-6">
                            <label>Years Of Education</label>
                            <input type="text" />
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button class="button large">Submit</button>
            </div>
        </div>
    </form>
</div>

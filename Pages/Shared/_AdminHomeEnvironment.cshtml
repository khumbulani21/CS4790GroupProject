@model ApplicationCore.Models.HomeEnvironmentFamily

<div class="reveal modal-small" id="homeEnvironment" data-reveal>
    <h2 class="border-bottom">Home Environment</h2>
    <div class="col-12 mb-5">
        Understanding a child’s home environment can help teachers individualize teaching goals and strategies for that
        child. Please help us better understand the child’s home environment by answering the following questions:
    </div>
    <div class="row m-3">
        <label>Primary language spoken in the home: </label>

        <select disabled asp-for="@Model.primaryLanguage">
            <option value=""></option>
            <option value="English">English</option>
            <option value="Spanish">Spanish</option>

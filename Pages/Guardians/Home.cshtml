<div class="container p-0 mt-2" id="body">
    <div class="row" style="height:600px;">

        <div class="col-lg-6 col-sm-12 border-left border-right order-lg-2" style="background-color: #dbd5e0">
            <div class="row">
                <div class="col-12 pb-3 pt-2 h5 text-center">
                    <span><b>Manage Enrollment</b></span>
                    <hr />
                </div>
                <div class="col-lg-12 col-sm-12" id="main-tabs">
                    <ul id="tabs" class="nav nav-tabs m-0 small" role="tablist">
                        <li class="nav-item border-0">
                            <a id="tab-A" href="#pane-A" class="child-tab nav-link active" data-toggle="tab">Enrolled</a>
                        </li>
                        <li class="nav-item">
                            <a id="tab-C" href="#pane-C" class="apply-tab nav-link" data-toggle="tab" role="tab">WaitList</a>
                        </li>
                        <li class="nav-item">
                            <a id="tab-B" href="#pane-B" class="contact-tab nav-link" data-toggle="tab" role="tab">Pending</a>
                        </li>
                        <li class="nav-item">
                            <a id="tab-B" href="#pane-B" class="contact-tab nav-link" data-toggle="tab" role="tab">Needs Info</a>
                        </li>
                    </ul>
                    <div id="content" class="tab-content" role="tablist">
                        <div id="pane-A" class="card tab-pane fade show active" role="tabpanel" aria-labelledby="tab-A">
                            <div class="card-body pt-3 rounded-right rounded-bottom font-1-2 overflow-auto" style="background-image: linear-gradient(#a391b1 30%, #f9f2ff 70%, white 90%); background-color: #dbd5e0; height: 500px ">
                                <div class="row">
                                    @if (Model.ChildrenList != null)
                                    {
                                        foreach (var child in Model.ChildrenList)
                                        {
                                            <div class="col-lg-4 col-sm-12 text-center">
                                                <div class="card text-center pb-0 shadow rounded" style="background-color: #f9f2ff">
                                                    <img class="card-img-top p-1" src="~/images/images/placeholder.png" alt="Card image cap">
                                                    <div class="card-body text-center pt-1 pb-0">
                                                        <div class="row pb-0">
                                                            <div class="col-12 text-center">
                                                                <p><small><b>@child.ChildFirst</b></small></p>
                                                            </div>
                                                            <div class="col-12 text-center">
                                                                <a class="button small shadow-lg rounded">Check-In</a>
                                                                <a class="button tiny shadow-lg rounded">Profile</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--<div class="col-12 text-center">
                    <span><b>Enrolled</b></span>
                    <hr />
                </div>
                <div class="col-12">
                    <!--<div class="card border-0 mb-3 ">
                <div class="card-body pb-0 mr-1 text-primary">
